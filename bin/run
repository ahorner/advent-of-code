#!/usr/bin/env ruby

require "date"

date = ARGV[0] || Time.new.localtime("-05:00").strftime("%Y/%d")

puts "Running code for #{date}:", nil

input_file = "#{date}/input.txt"
INPUT = File.open(input_file).read.chomp("\n") if File.exists?(input_file)

require_relative("../#{date}/code")

puts "\nDONE"
